# ─── Application ──────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
CORS_ORIGIN=http://localhost:3000

# ─── Authentication ───────────────────────────────────────────────────────────
# Generate with: openssl rand -base64 64
JWT_SECRET=
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=7d

# ─── Google OAuth 2.0 ─────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback
FRONTEND_URL=http://localhost:3000

# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://csedia:password@localhost:5432/csediualumni?schema=public
DATABASE_URL_TEST=postgresql://csedia:password@localhost:5432/csediualumni_test?schema=public

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=300

# ─── File Storage (S3 / MinIO) ────────────────────────────────────────────────
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=csediaalumni-files
# Leave blank for real AWS; set for local MinIO:
AWS_S3_ENDPOINT=http://localhost:9000

# ─── Email (SMTP) ─────────────────────────────────────────────────────────────
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@csediualumni.com
EMAIL_FROM_NAME=CSE DIU Alumni

# ─── Payments ─────────────────────────────────────────────────────────────────
SSLCOMMERZ_STORE_ID=
SSLCOMMERZ_STORE_PASS=
SSLCOMMERZ_IS_LIVE=false
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ─── Monitoring ───────────────────────────────────────────────────────────────
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ─── Seed (optional) ──────────────────────────────────────────────────────────
SEED_ADMIN_EMAIL=admin@csediualumni.com

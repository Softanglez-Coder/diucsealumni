# pnpm configuration for the CSE DIU Alumni monorepo

# Enforce the engines field in package.json (node >=22, pnpm >=9)
engine-strict=true

# Use workspace: protocol for internal packages
save-workspace-protocol=rolling

# Automatically install missing peer dependencies
auto-install-peers=true

# Do not hoist all packages to the root — keeps each app's node_modules clean
shamefully-hoist=false

# Strict peer dependency checks — fail on unresolved peer deps
strict-peer-dependencies=false

# Public npm registry
registry=https://registry.npmjs.org/

# Deduplicate peer dependencies
dedupe-peer-dependents=true
